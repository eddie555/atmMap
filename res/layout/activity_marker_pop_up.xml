<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_marker_pop_up_id"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFF"
    android:orientation="horizontal"
    android:padding="5dp" >
 
    
    <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="horizontal"
        android:id="@+id/lay1">
    
    <ImageButton
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="5dp" 
        />
    
     
    <TextView
        android:id="@+id/text" 
   		 android:layout_alignTop="@id/image"
        android:layout_toRightOf="@id/image"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:textColor="#000" 
        android:padding="5dp"/>
    
     <ImageButton
         android:id="@+id/x_close_id"
    	android:layout_alignTop="@id/text"
        android:layout_toRightOf="@id/text"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:layout_marginRight="5dp"
         android:src="@drawable/x_close" />

 <Button
         android:color="#FFFFFF"
         android:id="@+id/directionsButton"
        android:textAppearance="?android:attr/textAppearanceMedium"
         android:layout_width="fill_parent"
         android:layout_height="46dp"
         android:padding="10dp"
         android:text="Launch Directions"
         android:background="@color/backRedTransparent"  
         android:layout_marginTop="80dp"/>
     
     </RelativeLayout>
     
        <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="horizontal"
        android:id="@+id/lay2"
        
    android:layout_below="@id/lay1"
    android:layout_alignLeft="@id/lay1" >
     
     <Button
         android:id="@+id/saveButton"
         android:layout_width="100dp"
         android:layout_height="60dp"
         android:padding="10dp"
         android:text="SAVE"/>
     
     
      
     
      <Button
         android:id="@+id/saveLoc"
         android:layout_width="100dp"
         android:layout_height="60dp"
         android:padding="10dp"
         android:text="Save Location"
    	android:layout_alignTop="@id/saveButton"
        android:layout_toRightOf="@id/saveButton"/>
      
       <Button
         android:id="@+id/saveStreet"
         android:layout_width="100dp"
         android:layout_height="60dp"
         android:padding="10dp"
         android:text="Save Streetview"
    	android:layout_alignTop="@id/saveLoc"
        android:layout_toRightOf="@id/saveLoc" />
 
     </RelativeLayout>
</RelativeLayout>